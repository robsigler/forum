@model GetPostViewModel

@{
    ViewData["Title"] = "Post";
}


<div class="above-threads mb-2">
  <a type="button" class="btn btn-primary" href="/posts/@Html.DisplayFor(modelItem => modelItem.Id)/reply">Post a Reply</a>
</div>

<div class="container">
    @foreach (Post post in Model.Posts)
    {
        <div class="row my-2">
            <div class="col-4 border">
                <div>
                    @Html.DisplayFor(modelItem => post.Author.UserName)
                </div>
                <div class="small-text">
                    Joined: @Html.DisplayFor(modelItem => post.Author.JoinDate)
                </div>
            </div>
            <div class="col-6 border">
                <div class="small-text">
                    Posted @Html.DisplayFor(modelItem => post.CreatedDate)
                </div>
                <div>
                    @Html.DisplayFor(modelItem => post.Body)
                </div>
            </div>
        </div>
    }
</div>
