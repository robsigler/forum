@{
    ViewData["Title"] = "Threads";
}

<div class="above-threads mb-2">
  <a type="button" class="btn btn-primary" href="/threads/Create">Create New Thread</a>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Subject</th>
    </tr>
  </thead>
  <tbody>
    @foreach (Thread thread in Model)
    {
        <tr>
            <th scope="row">
                <h5 class="mb-1">
                    <a href="/threads/Get?id=@Html.DisplayFor(modelItem => thread.ID)">@Html.DisplayFor(modelItem => thread.Subject)</a>
                </h5>
                <p class="mb-1">by @Html.DisplayFor(modelItem => thread.Author.UserName), on @Html.DisplayFor(modelItem => thread.CreatedDate)</p>
            </th>
        </tr>
    }
  </tbody>
</table>
