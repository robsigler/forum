@model Forum.Models.Thread

@{
    ViewData["Title"] = "Thread";
}


<div class="above-threads mb-2">
  <a type="button" class="btn btn-primary" href="/threads/@Html.DisplayFor(modelItem => Model.ID)/reply">Post a Reply</a>
</div>

<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">Author</th>
      <th scope="col">Text</th>
    </tr>
  </thead>
  <tbody>
    @foreach (Post post in Model.Posts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => post.Author.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => post.Body)
            </td>
        </tr>
    }
  </tbody>
</table>
